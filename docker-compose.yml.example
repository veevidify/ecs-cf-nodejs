version: '3'

services:
  node:
    build:
      context: .
      dockerfile: dev.Dockerfile
    container_name: node-http
    env_file:
      - .env
    volumes:
      - .:/app
    ports:
      - "8080:$PORT"
    networks:
      - node-bridge
    command: npx ts-node src/server.ts

networks:
  node-bridge:
